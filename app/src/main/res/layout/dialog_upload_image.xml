<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/logout_drawble"
    android:padding="@dimen/_10sdp">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/dialog"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="Great America Tracking"
        android:textColor="#ff00"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvTitle"
        android:background="#000" />


    <TextView
        android:id="@+id/tvReallyLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:gravity="center_horizontal"
        android:padding="@dimen/_10sdp"
        android:text="Do you really want to upload"
        android:textColor="#000"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvReallyLogout"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_10sdp">


        <TextView
            android:id="@+id/tvNo"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:background="@drawable/rounded_button_upcoming"
            android:gravity="center"
            android:text="No"
            android:textColor="#fff"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvYes"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@drawable/rounded_button_ontheway"
            android:gravity="center"
            android:text="Yes"
            android:textColor="#fff"
            android:textStyle="bold" />

    </RelativeLayout>


</RelativeLayout>